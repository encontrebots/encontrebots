<html>

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <%- include('./partials/navbar'); %>
    <div class="hero-body">

                <div class="w-full py-10">
                    <div class="container mx-auto px-6 flex items-start justify-center">
                        <div class="w-full my-6">
                            <dh-component>
                                <!-- Card code block start -->
                                <div aria-label="cards" class="botcard bg-white dark:bg-gray-800 shadow rounded">
                                    <div class="relative">
                                        <img tabindex="0"  class="focus:outline-none h-56 shadow rounded-t w-full object-cover object-center" src="<%= serveri.background %>" alt="mountains cover" />
                                        <div class="inset-0 m-auto w-24 h-24 absolute bottom-0 -mb-12 xl:ml-10 rounded border-2 shadow border-white">
                                            <img tabindex="0"  class="focus:outline-none w-full h-full overflow-hidden object-cover rounded" src="<%= serveri.icon %>" alt="person" />
                                        </div>
                                    </div>
                                    <div class="card px-5 xl:px-10 pb-10">
                                        <div class="pt-3 xl:pt-5 flex flex-col xl:flex-row items-start xl:items-center justify-between">
                                            <div class="xl:pr-16 w-full xl:w-2/3">
                                                <div class="text-center xl:text-left mb-3 xl:mb-0 flex flex-col xl:flex-row items-center justify-between xl:justify-start">
                                                  <a tabindex="0" class=" focus:outline-none focus:outline-none">  <h2 class="navtitle mb-3 xl:mb-0 xl:mr-4 text-2xl  font-medium tracking-normal"><%= serveri.name %></h2></a>
                                                </div>
                                                <p tabindex="0" class="focus:outline-none text-center xl:text-left mt-2 text-sm tracking-normal leading-5"><%= serveri.descc %></p>
                                            </div>
                                            <div class="xl:px-10 xl:border-l xl:border-r w-full py-5 flex items-start justify-center xl:w-1/3">
                                                <div>
                                                    <h2 tabindex="0" class="focus:outline-none font-bold text-xl xl:text-2xl leading-6 mb-2 text-center"><%= serveri.dono.username %>#<%= serveri.dono.discriminator %></h2>
                                                   <a tabindex="0" class=" focus:outline-none"> <p class=" text-sm xl:text-xl leading-5">Dono(a)</p></a>
                                                </div>
                                            </div>
                                            <div class="w-full xl:w-2/3 flex-col md:flex-row justify-center xl:justify-end flex md:pl-6">
                                                <div class="field has-addons">
                                                    <p class="control">
                                                        <a href="<%= serveri.invite %>">
                                                            <button class="button is-success">
                                                                <span class="icon is-small">
                                                                    <i class="fas fa-plus"></i>
                                                                </span>
                                                                <span>Entrar</span>
                                                            </button>
                                                        </a>
                                                    </p>
                                                    <form action="/api/servers/report" method="POST">
                                                        <input type="hidden" name="guildid" id="guildid" value="<%= serveri.server %>"><section class="ftco-section pb-0"></section>
                                                        <p class="control">
                                                            <button type="submit" class="button is-link">
                                                                <span class="icon is-small">
                                                                    <i class="fas fa-paper-plane"></i>
                                                                </span>
                                                                <span>Reportar</span>
                                                            </button>
                                                        </p>
                                                    </form>
                                                    <% if (serverOwner) { %>
                                                    <p class="control">
                                                        <a href="/servers/<%= serveri.server %>/edit">
                                                            <button class="button is-warning">
                                                                <span class="icon is-small">
                                                                    <i class="fas fa-clipboard-list"></i>
                                                                </span>
                                                                <span>Editar</span>
                                                            </button>
                                                        </a>
                                                    </p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card code block end -->
                            </dh-component>
                        </div>
                    </div>
                </div>

        <div class="box">
            <div class="card-body">
                <div id="bot-description" style="white-space:pre-wrap;"><%- botDesc %></div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>